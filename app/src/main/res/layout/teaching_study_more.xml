<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:star="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/margin_size_30"
        android:layout_height="@dimen/margin_size_30"
        android:layout_margin="@dimen/margin_size_10"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_img"
        android:layout_toRightOf="@+id/iv_img"
        android:textColor="@color/defaultColor"
        android:textSize="@dimen/font_size_18" />

    <com.haoyu.app.view.StarBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_img"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/margin_size_10"
        android:visibility="gone"
        star:isEdit="false"
        star:starDistance="@dimen/margin_size_5"
        star:starEmpty="@drawable/assignment_default_xing"
        star:starFill="@drawable/assignment_press_xing"
        star:starNumber="5"
        star:starSize="@dimen/margin_size_13" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:paddingTop="10dp"
        android:textSize="@dimen/font_size_15" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/tv_content"
        android:paddingTop="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="10dp"
        android:background="@color/spaceColor" />

</RelativeLayout>